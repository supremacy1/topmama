    function updateDeliveryFee() {
        var selectedOption = document.getElementById("location").selectedOptions[0];
        var fee = selectedOption.getAttribute("data-fee");
        document.getElementById("delivery-fee").textContent = fee;
    }
    function changeMainImage(thumbnailElement) {
        thumbnailElement.closest('.image-container').querySelector('.main-image').src = thumbnailElement.src;
    }
